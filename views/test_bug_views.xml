<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Kanban View -->
    <record id="view_test_bug_kanban" model="ir.ui.view">
        <field name="name">test.bug.kanban</field>
        <field name="model">test.bug</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_test_bug" kanban_draggable="true">
                <field name="name"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="assigned_to_id"/>
                <field name="project_id"/>
                <field name="case_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_details">
                                <span><field name="project_id"/></span><br/>
                                <span><field name="case_id"/></span><br/>
                                <strong><field name="name"/></strong><br/>
                                <span>ğŸ“Œ <field name="priority"/></span><br/>
                                <span>ğŸ‘¤ <field name="assigned_to_id"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_test_bug_tree" model="ir.ui.view">
        <field name="name">test.bug.tree</field>
        <field name="model">test.bug</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="project_id"/>
                <field name="case_id"/>
                <field name="assigned_to_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_test_bug_form" model="ir.ui.view">
        <field name="name">test.bug.form</field>
        <field name="model">test.bug</field>
        <field name="arch" type="xml">
            <form string="Bug">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="priority"/>
                        <field name="state"/>
                        <field name="project_id"/>
                        <field name="case_id"/>
                        <field name="execution_line_id"/>
                        <field name="assigned_to_id"/>
                        <field name="reported_by_id"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="PiÃ¨ces jointes">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
