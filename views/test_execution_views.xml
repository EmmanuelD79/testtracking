<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vue liste : Exécutions -->
    <record id="view_test_execution_tree" model="ir.ui.view">
        <field name="name">test.execution.tree</field>
        <field name="model">test.execution</field>
        <field name="arch" type="xml">
            <list string="Exécutions de campagnes">
                <field name="name"/>
                <field name="project_id"/>
                <field name="tester_id"/>
                <field name="date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_test_execution_search" model="ir.ui.view">
        <field name="name">test.execution.search</field>
        <field name="model">test.execution</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="project_id"/>
                <field name="tester_id"/>
                <field name="date"/>
                <field name="status"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_project"
                            string="Project"
                            context="{'group_by':'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_test_execution_kanban" model="ir.ui.view">
        <field name="name">test.execution.kanban</field>
        <field name="model">test.execution</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_test_execution" kanban_draggable="true">
                <field name="name"/>
                <field name="status"/>
                <field name="tester_id"/>
                <field name="date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card o_kanban_{{ record.status.raw_value }}">
                            <div class="o_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><span>Testeur :</span> <field name="tester_id"/></div>
                                <div><span>fait le :</span> <field name="date"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue formulaire : Exécutions -->
    <record id="view_test_execution_form" model="ir.ui.view">
        <field name="name">test.execution.form</field>
        <field name="model">test.execution</field>
        <field name="arch" type="xml">
            <form string="Exécution de campagne">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="tester_id"/>
                        <field name="date"/>
                        <field name="status"/>
                    </group>
                    <notebook>
                        <page string="Résultats">
                            <field name="execution_line_ids">
                                <list>
                                    <field name="name" string="ref"/>
                                    <field name="case_id"/>
                                    <field name="status"/>
                                    <field name="comment"/>
                                </list>
                                <form string="Ligne d'exécution">
                                    <group>
                                        <field name="name" readonly="1"/>
                                        <field name="case_id"/>
                                        <field name="status"/>
                                        <field name="comment"/>
                                    </group>
                                    <!-- <group string="Bug lié">
                                        <field name="execution_step_ids.bug_id" widget="many2one" readonly="1"/>
                                    </group> -->
                                    <group string="Pièces jointes">
                                        <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                                    </group>
                                    <group string="Étapes">
                                        <field name="execution_step_ids" nolabel="1">
                                            <list default_order="step_sequence asc">
                                                <field name="step_sequence" readonly="1"/>
                                                <field name="name" readonly="1" string="ref"/>
                                                <field name="step_action" readonly="1"/>
                                                <field name="step_expected_result" readonly="1"/>
                                                <field name="status"/>
                                                <button name="action_report_bug"
                                                        string="Signaler un bug"
                                                        type="object"
                                                        icon="fa-bug"
                                                        class="btn-primary"/>
                                            </list>
                                        </field>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_test_execution_line_form" model="ir.ui.view">
        <field name="name">test.execution.line.form</field>
        <field name="model">test.execution.line</field>
        <field name="arch" type="xml">
            <form string="Résultat d'exécution">
                <sheet>
                    <group>
                        <field name="case_id"/>
                        <field name="status"/>
                        <field name="comment"/>
                    </group>
                    <field name="attachment_ids" widget="many2many_binary"/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_test_execution_line_graph" model="ir.ui.view">
        <field name="name">test.execution.line.graph</field>
        <field name="model">test.execution.line</field>
        <field name="arch" type="xml">
            <graph string="Résultats des cas de tests" type="bar">
                <field name="case_id" type="row"/>
                <field name="status" type="col"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>
</odoo>
